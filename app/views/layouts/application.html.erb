<!DOCTYPE html>
<html>
  <head>
    <title>Inventory</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if flash[:error].present? %>
      <h1><%= flash[:error] %></h1>
      <hr />
    <% end%>

    <%= render "auth_container"  %>
    <hr />
    <%= yield %>
  </body>
</html>
